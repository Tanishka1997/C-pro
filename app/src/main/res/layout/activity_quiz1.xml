<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.tanishka.cpro.Quiz1"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="false">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:textColor="#ff0359"
            android:layout_height="wrap_content"
            android:text="Which variable has the longest scope?

   \n #include &lt;stdio.h&gt;
   \n int b;
   \n int main()
    \n {
    \n    int c;
    \n    return 0;
   \n }
   \n int a;"/>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onclickRadio1"
                android:id="@+id/a1"
                android:buttonTint="#ff0a00"
                android:text="a"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="b"
                android:onClick="onclickRadio1"
                android:id="@+id/b1"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="c"
                android:onClick="onclickRadio1"
                android:id="@+id/c1"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Both a and b"
                android:onClick="onclickRadio1"
                android:id="@+id/d1"/>

        </RadioGroup>
<TextView
    android:textColor="#ff0359"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="\n#include &lt;stdio.h&gt;
    \nint x = 5;
    \nvoid main()
    \n{
        \nint x = 3;
        \nm();
        \nprintf(&quot;%d&quot;, x);
        \n}
        \nvoid m()
        \n{
        \nx = 8;
        \nn();
        \n}
        \nvoid n()
        \n{
        \nprintf(&quot;%d&quot;, x);
        \n}"/>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onclickRadio2"
            android:id="@+id/a2"
            android:text="8 3"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 8"
            android:onClick="onclickRadio2"
            android:id="@+id/b2"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8 5"
            android:onClick="onclickRadio2"
            android:id="@+id/c2"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 3"
            android:onClick="onclickRadio2"
            android:id="@+id/d2"/>

        </RadioGroup>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ff0359"
            android:text="\nWhat is the output of this C code?

    \n\n#include &lt;stdio.h&gt;
    \nint main()
    \n{
        \nint j = 10;
        \nprintf(&quot;%d\\n&quot;, j++);
            \nreturn 0;
            \n}

            "/>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onclickRadio3"
                android:id="@+id/a3"
                android:text="10"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11"
                android:onClick="onclickRadio3"
                android:id="@+id/b3"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Compile time error"
                android:onClick="onclickRadio3"
                android:id="@+id/c3"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Undefined behaviour"
                android:onClick="onclickRadio3"
                android:id="@+id/d3"/>

        </RadioGroup>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="Continue"
        android:text="Continue"/>
    </LinearLayout>
</ScrollView>