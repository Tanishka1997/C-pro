<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.tanishka.cpro.Quiz2"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
   >
    <TextView
        android:layout_width="match_parent"
        android:textColor="#ff0359"
        android:layout_height="wrap_content"
        android:text="What is the output of this C code?

    \n#include &lt;stdio.h&gt;
    \nint main()
    \n{
    \nint i = -3;
    \nint k = i % 2;
    \nprintf(&quot;%d\\n&quot;, k);
    \n}"/>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onclickRadio21"
            android:id="@+id/a21"
            android:text="Compile time error"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-1"
            android:onClick="onclickRadio21"
            android:id="@+id/b21"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:onClick="onclickRadio21"
            android:id="@+id/c21"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Implementation defined"
            android:onClick="onclickRadio21"
            android:id="@+id/d21"/>

    </RadioGroup>
    <TextView
        android:layout_width="match_parent"
        android:textColor="#ff0359"
        android:layout_height="wrap_content"
        android:text="\n#include &lt;stdio.h&gt;
    \nint main()
    \n{
      \n  int i = 3;
        \nint l = i / -2;
        \nint k = i % -2;
        \nprintf(&quot;%d %d\\n&quot;, l, k);
    \nreturn 0;
    \n}"/>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onclickRadio22"
            android:id="@+id/a22"
            android:text="Compile time error
"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-1 1"
            android:onClick="onclickRadio22"
            android:id="@+id/b22"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 -1"
            android:onClick="onclickRadio22"
            android:id="@+id/c22"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Implementation defined"
            android:onClick="onclickRadio22"
            android:id="@+id/d22"/>

    </RadioGroup>
    <TextView
        android:layout_width="match_parent"
        android:textColor="#ff0359"
        android:layout_height="wrap_content"
        android:text="\nWhat will be the value of d in the following program?

    \n#include &lt;stdio.h&gt;
    \nint main()
    \n{
      \n  int a = 10, b = 5, c = 5;
       \n int d;
        \nd = b + c == a;
        \nprintf(&quot;%d&quot;, d);
    \n}"/>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onclickRadio23"
            android:id="@+id/a23"
            android:text="Syntax error"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:onClick="onclickRadio23"
            android:id="@+id/b23"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:onClick="onclickRadio23"
            android:id="@+id/c23"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:onClick="onclickRadio23"
            android:id="@+id/d23"/>

    </RadioGroup>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="Continue"
        android:text="Continue"/>
</LinearLayout>


</ScrollView>